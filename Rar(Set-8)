CREATE TABLE doctor (
  doctorid INT NOT NULL,
  doctorname CHAR(40) NULL,
  specialization CHAR(40) NULL,
  experience INT NULL,
  contact BIGINT NULL,
  PRIMARY KEY (doctorid));
  
