 CREATE TABLE patient (
  patientid INT NOT NULL,
  patientname CHAR(40) NULL,
  type CHAR(10) NULL,
  doctortagged INT NULL,
  age INT NULL,
  visit DATE NULL,
  PRIMARY KEY (patientid),
  FOREIGN KEY (doctortagged) REFERENCES doctor(doctorid),
  CHECK(type = 'in' or type= 'out'));
  
