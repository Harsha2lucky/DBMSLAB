SELECT s.sname
FROM sailors s
WHERE EXISTS (SELECT *
FROM reserves r
WHERE r.bid = 103
AND r.sid = s.sid );

SELECT s.sname
FROM sailors s
WHERE s.sid IN ( SELECT r.sid
FROM Reserves r
WHERE r.bid IN ( SELECT b.bid
FROM Boats b
WHERE b.color = 'red'));

SELECT b.color
FROM Sailors s, Reserves r, Boats b
WHERE s.sid = r.sid AND r.bid = b.bid AND s.sname = 'Lubber';
