CREATE TABLE relation (
  emp_id INT NOT NULL,
  first_name CHAR(45) NULL,
  last_name CHAR(45) NULL,
  join_date DATE NULL,
  manager_id INT NULL,
  salary INT NULL,
  dept_id INT NULL,
  dept_name CHAR(45) NULL,
  head CHAR(45) NULL,
  dept_loc INT NULL,
  loc_id INT NULL,
  city CHAR(45) NULL);
  
  -- In 1NF derive a primary key
  ALTER TABLE relation
  ADD PRIMARY KEY (emp_id);
  
  -- In 2NF there should be no partial dependency (non-prime attr directly related to pk)
  ALTER TABLE relation
  DROP COLUMN dept_id;
  ALTER TABLE relation
  DROP COLUMN dept_name;
  ALTER TABLE relation
  DROP COLUMN head;
  ALTER TABLE relation
  DROP COLUMN dept_loc;
  ALTER TABLE relation
  DROP COLUMN loc_id;
  ALTER TABLE relation
  DROP COLUMN city;
  
  CREATE TABLE location (
  loc_id INT NOT NULL,
  city CHAR(45) NULL ,
  PRIMARY KEY (loc_id));
  
  CREATE TABLE department (
  dept_id INT NOT NULL,
  dept_name CHAR(45) NULL,
  head CHAR(45) NULL,
  dept_loc INT NULL,
  PRIMARY KEY (dept_id),
  FOREIGN KEY (dept_loc) REFERENCES location(loc_id));




